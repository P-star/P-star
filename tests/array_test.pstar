SCENE main {
	array<int> my_first_array;

	/* Set the first three elements of the array to 10, 20 and 30 */
	my_first_array[0] = 10;
	my_first_array[1] = 20;
	my_first_array[2] = 30;

	/* Iterate the array and print its values */
	int i = 0;
	while (i < @my_first_array) {
		echo "The value of element $i is " . my_first_array[i] . "\n";
		i++;
	}
	return 0;
}
